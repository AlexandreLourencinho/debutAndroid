<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestPageChamps">

    <EditText
        android:id="@+id/champ1"
        android:layout_width="324dp"
        android:layout_height="185dp"
        android:autofillHints="@string/chp_noncode"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/chp_noncode"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/champ2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.728" />

    <EditText
        android:id="@+id/champ2"
        android:layout_width="323dp"
        android:layout_height="167dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="28dp"
        android:autofillHints="@string/chp_code"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/chp_code"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/champclef"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949" />

    <EditText
        android:id="@+id/champclef"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginBottom="88dp"
        android:ems="10"
        android:hint="@string/clef"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/boutonGen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/btnGen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/champclef"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>